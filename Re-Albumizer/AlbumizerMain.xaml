<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Re_Albumizer"
        x:Class="Re_Albumizer.AlbumizerMain"
        mc:Ignorable="d"
        
        Title="Albumizer" SizeToContent="WidthAndHeight" Icon="/wmsc.ico" MinWidth="773.61" MinHeight="449.96" Height="443" Width="792">

    <Grid Height="434" VerticalAlignment="Bottom">
        <DockPanel HorizontalAlignment="Center" Width="792" Margin="0,0,0,403" Height="31" VerticalAlignment="Bottom">
            <Menu DockPanel.Dock="Top" Height="23">
                <MenuItem x:Name="FileMenu" Header="_File">
                    <MenuItem Header="_Open" Click="LoadNewAlbum"/>
                    <MenuItem Header="_Save" Click="SaveAlbumFile"/>
                    <MenuItem Header="_Exit" Click="ExitApp"/>
                </MenuItem>
                <MenuItem x:Name="EditMenu" Header="_Edit" IsEnabled="False"/>
                <MenuItem x:Name="HelpMenu" Header="_Help"/>
            </Menu>
            <StackPanel/>
        </DockPanel>
        <Label x:Name="LoadedAlbum_Text" Content="Current Album: None" Width="517" Height="26" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,377"/>
        <Grid x:Name="MainAlbumControls" Margin="0,57,5,0" Height="372" VerticalAlignment="Top" HorizontalAlignment="Right" Width="782" >
            <Image x:Name="AlbumArt" Margin="3,10,0,0" Source="/FISH.jpg" HorizontalAlignment="Left" Width="180" Height="180" VerticalAlignment="Top"/>
            <TabControl x:Name="tabControl" Margin="0,10,0,0" HorizontalAlignment="Right" Width="216">
                <TabItem Header="Song">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Album">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
            <ListView x:Name="SongList" d:ItemsSource="{Binding _songList}" Margin="0,10,221,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="348">
                <ListView.View>
                    <GridView>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" Header="Title" Width="100"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Performers}" Header="Performers" Width="100"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=TrackId}" Header="Track Number" Width="100"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Album}" Header="Album" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
        <Label x:Name="LengthFinder" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
